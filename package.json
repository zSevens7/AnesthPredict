{
  "name": "anesth-predict",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    
    "electron": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://127.0.0.1:5173 && cross-env ELECTRON_START_URL=http://127.0.0.1:5173 electron .\"",
    
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.anesthpredict.app",
    "productName": "AnesthPredict 1.0",
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "extraResources": [
      {
        "from": "resources/backend.exe",
        "to": "backend.exe"
      }
    ]
  }
}
